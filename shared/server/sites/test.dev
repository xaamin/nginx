server {
    client_max_body_size 20M;
    listen 80; # Default "Catch All" Server Block, only use on one block (default_server)

    server_name test.dev www.test.dev;

    add_header X-Frame-Options "SAMEORIGIN";

    return 301 https://$server_name$request_uri;
}

server {
    client_max_body_size 20M;

    listen 443 ssl; # Default "Catch All" Server Block, only use on one block (default_server)

    root /home/xaamin/web/test.dev;
    index index.php index.html index.htm;

    server_name test.dev www.test.dev;

    ssl on;
    ssl_certificate /home/xaamin/server/ssl/test.dev/nginx.crt;
    ssl_certificate_key /home/xaamin/server/ssl/test.dev/nginx.key;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ /\.ht {
    	deny all;
    }

    location ~ \.php$ {
        fastcgi_pass test.dev:9000;
        fastcgi_index index.php;
        fastcgi_split_path_info ^(.+\.php)(.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
}
